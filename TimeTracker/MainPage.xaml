<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTracker.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Grid Padding="10"
                  BackgroundColor="#FBFBFB"
                  ColumnDefinitions="Auto,*,Auto"
                  VerticalOptions="Start"
                  HeightRequest="56"
                  Margin="0,0,0,10"
                  >
                <!-- Left Icon (Menu) -->
                <Image Source="menu.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       VerticalOptions="Center"
                       Margin="0,0,10,0" />

                <!-- App Title -->
                <Label Grid.Column="1"
                       Text="Swipely"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#333" />

                <!-- Right Icon (Sync) -->
                <Image Grid.Column="2"
                       Source="sync.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />
            </Grid>


            <!-- Status Indicator -->
            <Frame CornerRadius="20" Padding="15" BackgroundColor="LightGreen" HorizontalOptions="Center">
                <Label x:Name="StatusLabel" Text="🟢 Currently IN" FontSize="22" HorizontalOptions="Center" />
            </Frame>

            <!-- Circular Progress Placeholder -->
            <Grid HeightRequest="200" WidthRequest="200" HorizontalOptions="Center">
                <GraphicsView x:Name="ProgressBarView" />

                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label x:Name="ProgressTimeLabel" FontSize="19" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>

            <!-- Time Left -->
            <Label x:Name="TimeLeftLabel" Text="Time Left: 1h 45m" FontSize="18" TextColor="DarkRed" HorizontalOptions="Center" />

            <!-- Buttons -->
            <VerticalStackLayout Spacing="10">
                <Button x:Name="SwipeActionButton" Text="Swipe OUT" FontSize="18" BackgroundColor="Red" TextColor="White" HeightRequest="50" CornerRadius="10" />
            </VerticalStackLayout>

            <!-- Last Action Info -->
            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label x:Name="LastActionLabel" Text="Last Action: Swipe IN" FontSize="16" />
                    <Label x:Name="LastActionTimeLabel" Text="Time: 10:45 AM" FontSize="16" />
                    <Label x:Name="LastActionDateLabel" Text="Date: 05 Jul 2025" FontSize="16" />
                </VerticalStackLayout>
            </Frame>
            <!-- Toggle Button -->
            <Button x:Name="ToggleLogsButton"
                Text="▼ Show Today's Activity"
                BackgroundColor="#E85D04"
                Clicked="ToggleLogsButton_Clicked"
                HorizontalOptions="Center"
                Margin="0,10"/>

            <!-- Log Section -->
            <StackLayout x:Name="LogsSection" IsVisible="False" Opacity="0"
             TranslationY="-10">
                <Label Text="Today's Activity:" FontSize="18" FontAttributes="Bold" />
                <CollectionView x:Name="TodayLogCollection">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="0,5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding In}" />
                                    <Label Text="{Binding Out}" />
                                    <Label Text="{Binding Label}" FontSize="12" TextColor="Gray" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>


            <!-- Today's Session Log --><!--
            <Label Text="Today's Activity:" FontSize="18" FontAttributes="Bold" />

            --><!-- ✅ No height restriction here --><!--
            <CollectionView x:Name="TodayLogCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding In}" />
                                <Label Text="{Binding Out}" />
                                <Label Text="{Binding Label}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

