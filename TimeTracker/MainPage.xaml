<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTracker.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Grid Padding="10"
                  BackgroundColor="#FBFBFB"
                  ColumnDefinitions="Auto,*,Auto"
                  VerticalOptions="Start"
                  HeightRequest="56"
                  Margin="0,0,0,10">
                <Image Source="menu.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       VerticalOptions="Center"
                       Margin="0,0,10,0" />

                <Label Grid.Column="1"
                       Text="Swipely"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#333" />

                <Image Grid.Column="2"
                       Source="sync.png"
                       HeightRequest="28"
                       WidthRequest="28"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />
            </Grid>

            <Frame CornerRadius="20" Padding="15" BackgroundColor="LightGreen" HorizontalOptions="Center">
                <Label x:Name="StatusLabel" Text="🟢 Currently IN" FontSize="22" HorizontalOptions="Center" />
            </Frame>

            <Grid HeightRequest="200" WidthRequest="200" HorizontalOptions="Center">
                <GraphicsView x:Name="ProgressBarView" />
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label x:Name="ProgressTimeLabel" FontSize="19" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>

            <Label x:Name="TimeLeftLabel"
                   Text="Time Left: 1h 45m"
                   FontSize="18"
                   TextColor="DarkRed"
                   HorizontalOptions="Center" />

            <Button x:Name="SwipeActionButton"
                Text="Swipe OUT"
                FontSize="18"
                BackgroundColor="#E63946"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="12"
                HorizontalOptions="Fill">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#E63946" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#B82E2E" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Button>

            <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                <VerticalStackLayout>
                    <Label x:Name="LastActionLabel" Text="Last Action: Swipe IN" FontSize="16" />
                    <Label x:Name="LastActionTimeLabel" Text="Time: 10:45 AM" FontSize="16" />
                    <Label x:Name="LastActionDateLabel" Text="Date: 05 Jul 2025" FontSize="16" />
                </VerticalStackLayout>
            </Frame>

            <Button x:Name="ToggleLogsButton"
                    Text="▼ Show Today's Activity"
                    BackgroundColor="#E85D04"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="ToggleLogsButton_Clicked"
                    HorizontalOptions="Fill">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#E85D04" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#C85500" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Button>

            <StackLayout x:Name="LogsSection"
                         IsVisible="False"
                         Opacity="0"
                         TranslationY="-10">
                <Label Text="Today's Activity:" FontSize="18" FontAttributes="Bold" />
                <CollectionView x:Name="TodayLogCollection">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="0,5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding In}" />
                                    <Label Text="{Binding Out}" />
                                    <Label Text="{Binding Label}" FontSize="12" TextColor="Gray" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
